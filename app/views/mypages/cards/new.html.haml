.wrapper
  -# ヘッダー
  = render partial: 'mypages/users/header' 
  -# メルカリ リンクバー
  = render partial: 'mypages/users/link_bar'
  -# メインページ
  %main.main_box
    -# サイドタブ
    = render partial: 'mypages/users/side_bar'
    -# メインタブ
    .cards_register
      %section.cards_register__box
        %h2.cards_register__box--text クレジットカード情報入力
        = form_with model: @card, url: mypages_user_cards_path, method: :post, local: true, class: 'cards_register_form' do |form|
          .cards_register_form__box
            .cards_register__number
              = form.label :card_number, 'カード番号', class: 'cards_register__number--text'
              %span.require 必須
              = form.text_field :card_number, placeholder: '半角数字のみ', class: 'cards_register__number--input', maxlength: '16'
              %ul.cards_register__number--logo
                %li.cards_register__number--logo--list= image_tag(asset_path('logo_visa.gif'),{alt: 'VISA', class: 'visa_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('mc_vrt_pos.svg'),{alt: 'MasterCard', class: 'master_card_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('4-04.saison.jpg'),{alt: 'SAIZON', class: 'saizon_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('jcb-logomark-img-02.gif'),{alt: 'JCB', class: 'jcb_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('amex-logomark-img-05.gif'),{alt: 'AMERICANEXPRESS', class: 'american_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('diners-logomark-img-02.gif'),{alt: 'Diners Club', class: 'diners_logo'})
                %li.cards_register__number--logo--list= image_tag(asset_path('discover-logomark-img-07.gif'),{alt: 'DISCOVER', class: 'discover_logo'})
            .cards_register__deadline
              = form.label :有効期限, class: 'cards_register__deadline--text'
              %span.require 必須
              .cards_register__deadline__box
                .cards_register__deadline__box--select
                  = form.select :exp_month,[["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]]
                  %span.month 月
                .cards_register__deadline__box--select
                  = form.select :exp_year,[["20",2020],["21",2021],["22",2021],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029],["30",2030]]
                  %span.year 年
            .cards_register__security
              = form.label :cvc, 'セキュリティコード', class: 'cards_register__security--text', maxlength: '16'
              %span.require 必須
              = form.text_field :cvc, placeholder: 'カード背面4桁もしくは3桁の番号', class: 'cards_register__security--input'
              .cards_register__security--question
                = link_to 'カード裏面の番号とは？', '/', class: 'card_number_question'
            .add_btn
              = form.submit '追加する', class: 'add_btn__link', id: 'add_form'
  -# フリマ広告
  = render partial: 'mypages/users/advertisement'
  -# フッター
  = render partial: 'mypages/users/footer'
  -# 出品ボタン
  = render partial: 'mypages/users/exibition_btn'