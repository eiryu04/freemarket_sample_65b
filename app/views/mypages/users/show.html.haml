            = link_to "mypages_user_path", class: 'link_tab' do
              %span ガイド
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span お問い合わせ
              =icon("fas", "angle-right")
        -# ミドルタブ
        %h3.title フリマ
        %ul.side_middle_bar
          %li.side_middle_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 売上・振込申請
              =icon("fas", "angle-right")
          %li.side_middle_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span ポイント
              =icon("fas", "angle-right")
        -# ボトムタブ
        %h3.title 設定
        %ul.side_bottom_bar
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span プロフィール
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 発送元・お届け先住所変更
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 支払い方法
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span メール/パスワード
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 本人情報
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 電話番号の確認
              =icon("fas", "angle-right")
          %li.side_bottom_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span ログアウト
              =icon("fas", "angle-right")
    -# メインタブ
    .main_content
      %section.main_content__user-icon
        = link_to root_path, class: 'main_content__user-icon--link' do
          %figure.user_icon_box
            = image_tag asset_path('member_photo_noimage_thumb.png'),class: 'user_icon_status'
          %h2.bold 田中太郎
          .user_status
            .user_status__evaluation 評価
            .user_status__number 0
            .user_status__exhibition 出品数
            .user_status__number 0
      -# お知らせ・やることリスト タブ
      %section.main_content__tab
        %ul.tab
          %li.tab__info.active
            %h3.tab__info--link お知らせ
          %li.tab__info
            %h3.tab__info--link やることリスト
        -# メッセージ
        .container
          -# お知らせ メッセージ文
          %ul.container__info.action
            %li.container__info--list
              = link_to root_path, class: 'info_link' do
                %p.furima_logo
