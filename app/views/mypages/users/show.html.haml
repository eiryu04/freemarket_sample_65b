.wrapper
  -# ヘッダー
  = render partial: 'header'
  -# メルカリ リンクバー
  = render partial: 'link_bar'
  -# メインページ
  %main.main_box
    -# サイドタブ
    .side
      %nav.side__bar
        %ul.side_top_bar
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'select_tab' do
              %span マイページ
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span お知らせ
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span やることリスト
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span いいね！一覧
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 出品する
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 下書き一覧
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 出品した商品 - 出品中
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 出品した商品 - 取引中
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 出品した商品 - 売却済み
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 購入した商品 - 取引中
              =icon("fas", "angle-right")
          %li.side_top_bar__link
            = link_to "mypages_user_path", class: 'link_tab' do
              %span 購入した商品 - 過去の取引
              =icon("fas", "angle-right")
